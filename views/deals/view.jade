// my-template.jade
extends ../layout

block content
	.col-md-9
		h2 Oferta

		h3 Datos generales

		table.table
			tr
				td	Estado:
				td	#{deal.status}
			tr
				td Titulo:
				td	#{deal.title}
			tr
				td Subtitulo:
				td	#{deal.tagline}
			tr
				td	Link:
				td	#{deal.slug}
			tr
				td	Caracteristicas:
				td	#{deal.characteristics}
			tr
				td	Condiciones:
				td	#{deal.conditions}

		br
		h3 Precios

		table.table
			tr
				td	Precio original:
				td $ #{deal.price} 
			tr
				td	Precio Final:
				td $ #{deal.special_price} 
			tr
				td	Descuento:
				td $ #{deal.discount} 

		br
		h3 Fechas

		table.table
			tr
				td.td_name Inicio de la oferta:
				td	#{deal.start_date}
			tr
				td.td_name Fin de la oferta:
				td	#{deal.end_date}
			tr
				td.td_name Inicio de canje:
				td	#{deal.start_redeem}
			tr
				td.td_name Fin de canje:
				td	#{deal.end_redeem}

		br
		h3 Cantidad de cupones

		table.table
			tr
				td Cantidad maxima:
				td	#{deal.max_coupons}
			tr
				td Maxima por usuario:
				td	#{deal.max_coupons_by_user} 

		br
		h3 Porcentajes

		table.table
			tr
				td Vendedor:
				td	#{deal.seller_percentage}%
			tr
				td Giombu:
				td	#{deal.giombu_percentage}%
			tr
				td Promotor:
				td	#{deal.promoter_percentage}%

		br
		h3 Otras

		table.table
			tr
				td	Costo de Env√≠o:
				td #{deal.shipping_cost} $
			tr
				td	Tienda:
				td	#{deal.store.name} 
			tr
				td	Vendedor:
				td	#{deal.seller}
			tr
				td	Franquiciante:
				td	#{deal.franchisor}
extends ../layout

block content
	.span9
		h3 Lista de Comercios
		.glyphicon.glyphicon-plus
		a(href="/stores/create_store_branch")  Cargar Comercio	
		table.table_store_list
			-each store in stores
				.media
					.pull-left(href="#")
						a(href="/stores/review/#{store._id}", rel="tooltip")
							if(typeof store.images!== "undefined" )
								if(typeof store.images[0] !== "undefined" )
									img( src="/photos/stores/#{store.images[0].filename}", class="image",style="width:100px;")
								else
									img( src="/img/logo_giombu.png", class="image",style="width:100px;")
							else
								img( src="/img/logo_giombu.png", class="image",style="width:100px;")
					.media-body
						h4.media-heading 
							a(href="/stores/review/#{store._id}", rel="tooltip") #{store.name}
						.media-body
							p #{store.about}

extends ../layout

block content
	p.text-info
		#{expose.message}
	h3 Invitaciones
	table.table
		tr
			td
				h5 Nombre
			td
				h5 Email
			td
				h5 Respuesta
			td
		-if(invitations)
			-each invitation in invitations
				tr
					td
						a(href="/invitations/#{invitation._id}")
							p #{invitation.name}
					td
						a(href="/invitations/#{invitation._id}")
							p #{invitation.email}
					td
					
						a(href="/invitations/#{invitation._id}")
							p #{invitation.accepted_date}
					
						a(href="/invitations/#{invitation._id}")
							p #{invitation.declined_date}
					
					td.span1
						a(href="/invitations/edit/#{invitation._id}", rel="tooltip", title="Editar").btn.btn-mini
							i.icon-pencil
		-else
			p No hay invitaciones
	
	button(class="btn btn-primary",data-toggle="modal", data-target="#invitationModal") Invita a Giombu 	
	include ../partials/invitations/invite






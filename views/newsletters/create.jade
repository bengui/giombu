// my-template.jade
extends ../layout

//Bloque de contenido.
block content
	h3 Crear Newsletter
	.col-md-8
		form(method='post',id="newsletters_create" ,action='/newsletters/filter_deals').form-horizontal
			.form-group
				label.col-md-4.control-label Titulo:
				.col-md-8
					input(name='title', type='text' ,class="required")
			.form-group
				label.col-md-4.control-label Franquicia:
				.col-md-8
					select(name='newsletter[franchise]', type='text' ,class="required") 
						-each franchise in franchises
							option(value="#{franchise._id}") #{franchise.name}
			.form-group
				label.col-md-4.control-label Cantidad de ofertas:
				.col-md-8
					select(name='max_deals', type='text' ,class="required") 
						option(value="1") 1
						option(value="5") 5
						option(value="10") 10
						option(value="15") 15
						option(value="20") 20
			.form-group
				label.col-md-4.control-label Fecha de inicio:
				.col-md-8
					input(name='start_timeframe', type='date', placeholder="dd/mm/yyyy" ,class="required date").form-control.input-sm
				label.col-md-4.control-label Fecha de fin:
				.col-md-8
					input(name='end_timeframe', type='date', placeholder="dd/mm/yyyy" ,class="required date").form-control.input-sm
			input(type='submit', value='Paso siguiente')
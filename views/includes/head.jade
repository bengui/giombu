			else
				if typeof user.username === "undefined"
					li(class='fright space')
						img(class='space', src='/img/icon_suscribir.png')
						a(href='#subscription', role='button', data-toggle='modal') Suscríbete
					li(class='fright space')
						span |
						img(class='space', src='/img/icon_crear_cuenta.png')
						a(href="/users/register") Registrate
					li(class='fright space')
						span |
						img(class='space', src='/img/icon_login_person.png')
						a(href='#myModal', role='button', data-toggle='modal') Accede

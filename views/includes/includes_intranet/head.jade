.col-md-12
	a(href="/")
		img(src="/img/logo_giombu.png", style="margin-bottom:15px;")

	-if (expose.message)
		.alert.alert-info.alert-dismissable
			button(type="button" class="close" data-dismiss="alert" aria-hidden="true")&times;
			p #{expose.message}
	-if (expose.error)
		.alert.alert-danger.alert-dismissable
			button(type="button" class="close" data-dismiss="alert" aria-hidden="true")&times;
			p #{expose.error}

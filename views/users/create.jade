extends ../home
	
block content
	.col-md-10.body_register
		h3 Crea tu cuenta
			//- img(src="/img/img-form-reg.png", class='img_form_reg') 	
		form(method='post', id="users_register", action='/users/save').form-horizontal
			p.text-muted * Campos Obligatorios
			.col-md-6
				.form-group
					label.col-md-4.control-label *Nombre de Usuario:
					.col-md-8
						input(name='user[username]', type='text', class='form-control required') 
				.form-group
					label.col-md-4.control-label *Nombres:
					.col-md-8
						input(name='user[name]', type='text' ,class="form-control required") 
				.form-group
					label.col-md-4.control-label *Apellido(s):
					.col-md-8
						input(name='user[lname]', type='text' ,class="form-control required") 
				.form-group
					label.col-md-4.control-label *Email:
					.col-md-8
						input(name='user[email]', type='text' ,class="form-control required email") 
				.form-group
					label.col-md-4.control-label *Contraseña:
					.col-md-8
						input(name='user[password]', type='password', class="form-control required") 
				.form-group
					label.col-md-4.control-label *Confirmar contraseña:
					.col-md-8
						input(name='user[confirm_password]', type='password', class="form-control required") 
				.form-group
					label.col-md-4.control-label *Fecha de nacimiento:
					.col-md-8
						input(name='user[birthday]', type='date', class="form-control required") 
				.form-group
					label.col-md-4.control-label Genero:
					.col-md-8
						select.form-control
							option(value='m') Masculino
							option(value='f') Femenino
			.col-md-6
				.form-group
					label.col-md-4.control-label Telefono:
					.col-md-8
						input(name='user[phone]', type='text').form-control
				.form-group
					label.col-md-4.control-label Celular:
					.col-md-8
						input(name='user[mobile]', type='text').form-control
				.form-group
					label.col-md-4.control-label *Dirección: 
					.col-md-8
						input(name='user[address]', type='text', class="form-control required") 
				.form-group
					label.col-md-4.control-label *Páis:
					.col-md-8
						select(name='user[country]', type='text' ,class="form-control required").col-md-8
							option(value="argentina") Argentina
				.form-group
					label.col-md-4.control-label *Provincia:
					.col-md-8
						select(name='user[state]', type='text' ,class="form-control required").col-md-8
							option( value="entrerios") Entre Rios
				.form-group
					label.col-md-4.control-label *Ciudad:
					.col-md-8
						select(name='user[city]', type='text' ,class="form-control required")
							option(value="parana") Parana
				.form-group
					label.col-md-4.control-label *Codigo Postal:
					.col-md-8
						input(name='user[zip]', type='text', class="form-control required")
				.form-group
					label.col-md-4.control-label Usuario Que te Invito: 
					.col-md-8
						input(type='user[text]', name="inviter",placeholder="Usuario" ,class="form-control users_input typeahead" , data-provide="typeahead", data-items="4")
				.form-group
					.col-md-offset-4.col-md-8
						button(name='submit', type='submit').btn.btn-info Registrarme
	.col-md-4
		h4 Ya estas registrado?
		form(method='post', action='/users/login_user/').form-horizontal
			.form-group
				label.col-md-6.control-label Usuario:
				.col-md-6
					input(name='username', type='text' ,class="required form-control")
			.form-group
				label.col-md-6.control-label Contraseña:
				.col-md-6
					input(name='password', type='password' ,class="required form-control") 
			.form-group
				.col-md-offset-6.col-md-4
					button(name='submit', type='submit').btn.btn-info.form-control Enviar
doctype html
html
	head
		title Giombu
		include includes/scripts
	body
		include includes/head
		block content
		block other_deals
		#myModal.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-header
				button(class="close", data-dismiss="modal", aria-hidden="true") &times
				- if(typeof(error) != 'undefined')
					p #{error}
				- else
					h3 ¿Estás registrado?
			.modal-body
				div( class='container_form')
					form(method='post', action='/users/login_user/')
						label Usuario
						input(name='username', type='text', class="required")
						label Contraseña	
						input(name='password', type='password', class="required") 
						br
						button.btn.btn-primary(name='submit', type='submit') Enviar
			.modal-footer
				a(href="/users/create") Registrate en Giombu
		#subscription.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-header
				button(class="close", data-dismiss="modal", aria-hidden="true") &times
				h3 ¡Recibe nuestras ofertas!
			.modal-body
				form(action="/subscribers/create", method="post")
					input(name='subscriber[email]', type='text',value="Mail") 
					br 
					select(name="subscriber[franchise]", class="franchises_subscription",type="text")
						option(value='Rosario') Rosario
						option(value='Parana') Parana
					br
					button.btn.btn-primary(name='submit', type='submit') Enviar
			.modal-footer
	#footer
		p

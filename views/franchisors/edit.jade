extends ../layout

block content
	h3 Editar Franquiciante
	br
	form(method='post', id="franchisor_edit", action='/franchisors/edit').form-horizontal
		input(name='franchisor_id', type='hidden', value='#{franchisor._id}')
		.form-group
				label.col-md-2.control-label Nombre:
				.col-md-8
					input(name='franchisor[name]',value='#{franchisor.name}',  type='text').form-control.input-sm
		.form-group
				label.col-md-2.control-label Dominio:
				.col-md-8
					input(name='franchisor[default_domain]',value='#{franchisor.default_domain}',  type='text').form-control.input-sm
		.form-group
					label.col-md-2.control-label Dominio seguro:
					.col-md-8
						input(name='franchisor[secure_domain]',value='#{franchisor.secure_domain}', type='text').form-control.input-sm
		.form-group
					label.col-md-2.control-label Desinencia:
					.col-md-8
						input(name='franchisor[cctdl]',value='#{franchisor.cctdl}',  type='text').form-control.input-sm
		.form-group
					label.col-md-2.control-label Zona horaria por defecto:
					.col-md-8
						input(name='franchisor[default_timezone]',value='#{franchisor.default_timezone}',  type='text').form-control.input-sm
		.form-group
					label.col-md-2.control-label Lenguaje:
					.col-md-8
						input(name='franchisor[language]',value='#{franchisor.language}',  type='text').form-control.input-sm
		.form-group
					label.col-md-2.control-label Fanpage:
					.col-md-8
						input(name='franchisor[fanpage]', value='#{franchisor.fanpage}', type='text').form-control.input-sm
		.form-group
			.col-sm-offset-2.col-sm-8
				button(type='submit').btn.btn-default Guardar
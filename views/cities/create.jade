extends ../layout

block content
    
    h3 #{state.name} - Crear Ciudad
    br
    form(method="POST" action="/cities/create").form-horizontal
        input(name="city.state" type="hidden" value="#{state._id}")
        .form-group
            label.col-md-2.control-label Nombre
            .col-md-8
                input(name="city[name]" type="text").form-control.input-sm
        .form-group
            .col-sm-offset-2.col-sm-8
                button(type='submit').btn.btn-default Guardar
	-if (coupon.status === "unredeemed")
		.alert.alert-info(style="text-align:center")
			b #{coupon.code}
			p No canjeado
			a(href='/deals/redeem_coupon/#{sale._id}/#{coupon.code}', role="button", class="btn btn-sm btn-primary") Canjear
			a(href='/sales/#{sale._id}', role="button", class="btn btn-sm btn-primary") Detalle
